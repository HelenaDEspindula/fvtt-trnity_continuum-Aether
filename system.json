{
  "id": "fvtt-trnity_continuum-Aether",
  "title": "Trinity Continuum: Aether (Simple)",
  "description": "Simple character and NPC sheets with Storypath rolling for Trinity Continuum: Aether.",
  "version": "0.2.0",

  "manifest": "https://raw.githubusercontent.com/HelenaDEspindula/fvtt-trnity_continuum-Aether/main/system.json",
  "download": "https://github.com/HelenaDEspindula/fvtt-trnity_continuum-Aether/archive/refs/tags/v0.2.0.zip",

  "minimumCoreVersion": "11",
  "compatibleCoreVersion": "11",

  "authors": [
    {
      "name": "Helena D'Espindula",
      "url": "https://github.com/HelenaDEspindula",
      "role": "System design, rules adaptation, implementation"
    },
    {
      "name": "ChatGPT (OpenAI)",
      "url": "https://openai.com",
      "role": "Assisted with code structure, Foundry VTT patterns, and implementation guidance"
    }
  ],

  "esmodules": [
    "module/constants.js",
    "module/actor/actor.js",
    "module/actor/actor-sheet.js",
    "module/actor/npc-sheet.js"
  ],

  "styles": [
    "css/aether.css"
  ],

  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ],

  "packs": [],

  "actors": {
    "character": {
      "type": "character",
      "label": "Character",
      "sheet": {
        "class": "AetherActorSheet",
        "template": "systems/fvtt-trnity_continuum-Aether/templates/actor/actor-sheet.hbs"
      }
    },
    "npc": {
      "type": "npc",
      "label": "NPC",
      "sheet": {
        "class": "AetherNPCSheet",
        "template": "systems/fvtt-trnity_continuum-Aether/templates/actor/npc-sheet.hbs"
      }
    }
  },

  "initiative": "1d10",

  "gridDistance": 1,
  "gridUnits": "m",

  "primaryTokenAttribute": "health.current",

  "socket": false
}
