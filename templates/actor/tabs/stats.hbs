<!-- ATTRIBUTES -->
<div class="aether-card">
  <h2>Attributes</h2>

  {{#each system.attributes as |attr key|}}
    <div class="aether-line">
      <label>{{lookup ../AETHER.ATTRIBUTES key}}</label>
      <input
        type="number"
        name="system.attributes.{{key}}.value"
        value="{{attr.value}}"
        min="0"
      />
    </div>
  {{/each}}
</div>

<!-- SKILLS -->
<div class="aether-card">
  <h2>Skills</h2>

  {{#each system.skills as |skill key|}}
    <div class="aether-line">
      <span class="aether-skill-label">
        {{lookup ../AETHER.SKILLS key}}
      </span>

      <input
        type="number"
        name="system.skills.{{key}}.value"
        value="{{skill.value}}"
        min="0"
      />

      <button
        type="button"
        class="aether-roll"
        data-roll-skill="{{key}}">
        Roll
      </button>
    </div>
  {{/each}}
</div>

