<!-- COMBAT (NEW) -->
<div class="aether-card">
  <h2>Combat</h2>

  <div class="aether-line">
    <label>Soft Armor</label>
    <input
      type="number"
      name="system.combat.armor.soft"
      value="{{system.combat.armor.soft}}"
    />
    <span class="aether-muted">Applies to all Defenses</span>
  </div>

  <div class="aether-line">
    <label>Hard Armor</label>
    <input
      type="number"
      name="system.combat.armor.hard"
      value="{{system.combat.armor.hard}}"
    />
    <span class="aether-muted">Used for Health (optional)</span>
  </div>

  <hr>

  <div class="aether-line">
    <label>Defense Mod (Stamina)</label>
    <input
      type="number"
      name="system.combat.defenseMods.stamina"
      value="{{system.combat.defenseMods.stamina}}"
    />
    <span class="aether-muted">
      Total: <b>{{system.combat.defenses.stamina}}</b>
    </span>
  </div>

  <div class="aether-line">
    <label>Defense Mod (Resolve)</label>
    <input
      type="number"
      name="system.combat.defenseMods.resolve"
      value="{{system.combat.defenseMods.resolve}}"
    />
    <span class="aether-muted">
      Total: <b>{{system.combat.defenses.resolve}}</b>
    </span>
  </div>

  <div class="aether-line">
    <label>Defense Mod (Composure)</label>
    <input
      type="number"
      name="system.combat.defenseMods.composure"
      value="{{system.combat.defenseMods.composure}}"
    />
    <span class="aether-muted">
      Total: <b>{{system.combat.defenses.composure}}</b>
    </span>
  </div>
</div>

<!-- HEALTH -->
<div class="aether-card">
  <h2>Health</h2>

  {{#each healthRows as |row|}}
    <div class="aether-line">
      <span class="health-label">{{row.label}}</span>

      {{#each row.boxes as |box|}}
        <input
          type="checkbox"
          class="health-box"
          data-level="{{row.key}}"
          data-index="{{box.index}}"
          {{#if box.checked}}checked{{/if}}
        />
      {{/each}}
    </div>
  {{/each}}

  <label>Notes</label>
  <textarea
    name="system.health.notes"
    rows="3"
  >{{system.health.notes}}</textarea>
</div>

<!-- INSPIRATION -->
<div class="aether-card">
  <h2>Inspiration</h2>

  <div class="aether-line">
    <label>Current</label>
    <input
      type="number"
      name="system.pools.inspiration.value"
      value="{{system.pools.inspiration.value}}"
      min="0"
    />

    <span class="aether-muted">
      Max: {{system.pools.inspiration.max}}
    </span>

    <button
      type="button"
      class="aether-insp-reset">
      Reset
    </button>
  </div>
</div>

<!-- WEAPONS -->
<div class="aether-card">
  <h2>Weapons</h2>

  <div class="item-controls">
    <button type="button" class="item-create" data-type="weapon">
      + Add Weapon
    </button>
  </div>

  <ol class="item-list">
    {{#each weapons as |it|}}
      <li class="item" data-item-id="{{it._id}}">
        <span>{{it.name}}</span>

        <div class="item-controls">
          <a class="item-edit">Edit</a>
          <a class="item-delete">Delete</a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>

