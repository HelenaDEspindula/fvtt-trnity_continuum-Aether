<section class="aether-card">
  <h2>Attributes</h2>

  {{#each system.attributes as |attr key|}}
    <div class="aether-line">
      <label>{{lookup ../AETHER.ATTRIBUTES key}}</label>
      <input
        type="number"
        name="system.attributes.{{key}}.value"
        value="{{attr.value}}"
        data-dtype="Number"
        min="0"
      />
    </div>
  {{/each}}
</section>

<section class="aether-card">
  <h2>Skills</h2>

  {{#each system.skills as |skill key|}}
    <div class="aether-line">
      <button type="button" class="aether-roll" data-roll-skill="{{key}}">Roll</button>
      <label>{{lookup ../AETHER.SKILLS key}}</label>
      <input
        type="number"
        name="system.skills.{{key}}.value"
        value="{{skill.value}}"
        data-dtype="Number"
        min="0"
      />
    </div>
  {{/each}}
</section>

<section class="aether-card">
  <h2>Pools</h2>

  <div class="aether-line">
    <label>Inspiration</label>
    <input
      type="number"
      name="system.pools.inspiration.value"
      value="{{system.pools.inspiration.value}}"
      data-dtype="Number"
      min="0"
    />
    <span class="aether-muted">/ {{system.pools.inspiration.max}}</span>
  </div>

  {{#if isGM}}
    <div class="aether-line">
      <button type="button" class="aether-insp-reset">Reset Inspiration (Session Start)</button>
      <span class="aether-muted"></span>
      <span></span>
    </div>
  {{/if}}
</section>

<section class="aether-card">
  <h2>Health</h2>

  {{#if system.health}}
    <div class="aether-line">
      <label>Max</label>
      <input
        type="number"
        name="system.health.max"
        value="{{system.health.max}}"
        data-dtype="Number"
        min="0"
      />
      <button type="button" class="aether-health-rebuild">Rebuild</button>
    </div>

    <div class="aether-muted" style="margin: 6px 0;">
      Click a box to cycle: empty, bashing, lethal, aggravated
    </div>

    <div class="aether-health-track">
      {{#each system.health.boxes as |state idx|}}
        <button
          type="button"
          class="aether-health-box"
          data-health-index="{{idx}}"
          data-health-state="{{state}}"
          aria-label="Health box {{idx}}"
        ></button>
      {{/each}}
    </div>

    <div style="margin-top: 8px;">
      <label class="aether-muted">Details</label>
      <textarea
        name="system.health.notes"
        rows="3"
        style="width: 100%;"
      >{{system.health.notes}}</textarea>
    </div>
  {{else}}
    <div class="aether-muted">
      Health data is not available for this actor yet.
    </div>
  {{/if}}
</section>