<!-- EDGES -->
<div class="aether-card">
  <h2>Edges</h2>

  <div class="item-controls">
    <button type="button" class="item-create" data-type="edge">
      + Add Edge
    </button>
  </div>

  <ol class="item-list">
    {{#each edges as |it|}}
      <li class="item" data-item-id="{{it._id}}">
        <strong>{{it.name}}</strong>
        <span class="aether-muted">Level {{it.system.level}}</span>

        <div class="item-controls">
          <a class="item-edit">Edit</a>
          <a class="item-delete">Delete</a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>

<!-- SKILL TRICKS -->
<div class="aether-card">
  <h2>Skill Tricks</h2>

  <div class="item-controls">
    <button type="button" class="item-create" data-type="skillTrick">
      + Add Skill Trick
    </button>
  </div>

  <ol class="item-list">
    {{#each skillTricks as |it|}}
      <li class="item" data-item-id="{{it._id}}">
        <strong>{{it.name}}</strong>

        <span class="aether-muted">
          Skill: {{lookup ../AETHER.SKILLS it.system.skill}}
        </span>

        <span class="aether-muted">
          Ref: {{it.system.bookPage}}
        </span>

        <div class="item-controls">
          <a class="item-edit">Edit</a>
          <a class="item-delete">Delete</a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>

<!-- AFFINITIES -->
<div class="aether-card">
  <h2>Affinities</h2>

  <div class="item-controls">
    <button type="button" class="item-create" data-type="affinity">
      + Add Affinity
    </button>
  </div>

  <ol class="item-list">
    {{#each affinities as |it|}}
      <li class="item" data-item-id="{{it._id}}">
        <strong>{{it.name}}</strong>

        <span class="aether-muted">
          Modifier: {{it.system.modifier}}
        </span>

        <span class="aether-muted">
          Type: {{it.system.relationshipType}}
        </span>

        <span class="aether-muted">
          Level: {{it.system.relationshipLevel}}
        </span>

        <div class="item-controls">
          <a class="item-edit">Edit</a>
          <a class="item-delete">Delete</a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>
