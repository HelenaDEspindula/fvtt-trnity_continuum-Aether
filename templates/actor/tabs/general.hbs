<div class="aether-grid">

  <!-- TYPE -->
  <div class="aether-card">
    <h2>Type</h2>

    <div class="aether-line">
      <label>Character Type</label>
      <select name="system.general.type">
        <option value="squire" {{#if (eq system.general.type "squire")}}selected{{/if}}>Squire</option>
        <option value="gog" {{#if (eq system.general.type "gog")}}selected{{/if}}>Gog</option>
        <option value="magog" {{#if (eq system.general.type "magog")}}selected{{/if}}>Magog</option>
      </select>
    </div>
  </div>

  <!-- ASPIRATIONS -->
  <div class="aether-card">
    <h2>Aspirations</h2>

    <div class="item-controls">
      <button type="button" class="item-create" data-type="aspiration">
        + Add Aspiration
      </button>
    </div>

    <ol class="item-list">
      {{#each aspirations as |it|}}
        <li class="item" data-item-id="{{it._id}}">
          <span class="item-name">{{it.name}}</span>
          <span class="aether-muted">Intensity: {{it.system.intensity}}</span>

          <div class="item-controls">
            <a class="item-edit">Edit</a>
            <a class="item-delete">Delete</a>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>

</div>

