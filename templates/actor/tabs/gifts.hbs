<div class="aether-grid">

  <!-- GIFTS -->
  <div class="aether-card">
    <h2>Gifts</h2>

    <div class="item-controls">
      <button
        type="button"
        class="item-create"
        data-type="gift">
        + Add Gift
      </button>
    </div>

    <ol class="item-list">
      {{#each gifts as |it|}}
        <li class="item" data-item-id="{{it._id}}">
          <div class="aether-line">
            <strong>{{it.name}}</strong>

            <span class="aether-muted">
              Level {{it.system.level}}
            </span>

            <label class="aether-muted">
              Magog
              <input
                type="checkbox"
                disabled
                {{#if it.system.isMagog}}checked{{/if}}
              />
            </label>

            <div class="item-controls">
              <a class="item-edit">Edit</a>
              <a class="item-delete">Delete</a>
            </div>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>

  <!-- DEVIATIONS -->
  <div class="aether-card">
    <h2>Deviations</h2>

    <div class="aether-muted">
      Required Deviations (from Magog Gifts): {{requiredDeviations}}
    </div>

    <div class="item-controls">
      <button
        type="button"
        class="item-create"
        data-type="deviation">
        + Add Deviation
      </button>
    </div>

    <ol class="item-list">
      {{#each deviations as |it|}}
        <li class="item" data-item-id="{{it._id}}">
          <div class="aether-line">
            <strong>{{it.name}}</strong>

            <span class="aether-muted">
              Level {{it.system.level}}
            </span>

            <div class="item-controls">
              <a class="item-edit">Edit</a>
              <a class="item-delete">Delete</a>
            </div>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>

</div>
